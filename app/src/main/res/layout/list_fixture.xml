<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
   app:cardBackgroundColor="@color/white1"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageview_home"
                        android:layout_width="50dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_home"
                        android:text="Home"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/robotoegular"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageview_awaycountry"
                        android:layout_width="50dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_awaycountry"
                        android:text="Away"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/robotoegular"/>
                </LinearLayout>


            </LinearLayout>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:orientation="vertical">
                 <TextView
                     android:layout_width="match_parent"
                     android:id="@+id/textview_time"
                     android:text="Time"
                     android:textSize="17dp"
                     android:textColor="@color/white"
                     android:fontFamily="@font/robotoegular"
                     android:padding="8dp"
                     android:textAlignment="textEnd"
                     android:layout_marginStart="16dp"
                     android:layout_height="wrap_content"/>

             </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match name"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/robotoegular"
            android:id="@+id/textview_match"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIFA World Cup 2022"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:fontFamily="@font/robotoegular"
           />

    </LinearLayout>

</androidx.cardview.widget.CardView>